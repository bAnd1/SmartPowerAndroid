<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87CEFA" >

    <TextView
        android:id="@+id/textView_main_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Einstellungen der Benachrichtigungen"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <Button
        android:id="@+id/button_activity_main_activate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_main_activity_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="saveActivate"
        android:text="Aktivieren" />

    <Button
        android:id="@+id/button_activity_main_deactivate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_activity_main_activate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="saveDeactivate"
        android:text="Deaktivieren" />

    <TextView
        android:id="@+id/textView_main_activity_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_activity_main_deactivate"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:text="Ereignisse "
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/imageView_main_acvitiy_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/title" />

</RelativeLayout>